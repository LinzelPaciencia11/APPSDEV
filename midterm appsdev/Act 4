using System;
using System.Linq;

namespace HangmanGame
{
    class Program
    {
        private static string[] words = { "hangman", "computer", "programming", "software", "developer", "interface" };
        private static string wordToGuess;
        private static char[] guessedWord;
        private static int maxAttempts = 10;
        private static int attemptsLeft;

        static void Main(string[] args)
        {
            InitializeGame();

            while (attemptsLeft > 0 && guessedWord.Contains('*'))
            {
                Console.WriteLine($"Word to guess: {string.Join(" ", guessedWord)}");
                Console.WriteLine($"Attempts left: {attemptsLeft}");
                Console.Write("Enter a letter: ");
                char guessedLetter = char.ToLower(Console.ReadKey().KeyChar);
                Console.WriteLine();
                CheckLetter(guessedLetter);
            }

            if (attemptsLeft == 0)
            {
                Console.WriteLine($"You lost! The word was: {wordToGuess}");
            }
            else
            {
                Console.WriteLine("Congratulations! You guessed the word.");
            }
        }

        private static void InitializeGame()
        {
            Random random = new Random();
            wordToGuess = words[random.Next(words.Length)];
            guessedWord = Enumerable.Repeat('*', wordToGuess.Length).ToArray();
            attemptsLeft = maxAttempts;
        }

        private static void CheckLetter(char letter)
        {
            bool letterFound = false;
            for (int i = 0; i < wordToGuess.Length; i++)
            {
                if (wordToGuess[i] == letter)
                {
                    guessedWord[i] = letter;
                    letterFound = true;
                }
            }

            if (!letterFound)
            {
                attemptsLeft--;
            }
        }
    }
}
