using System;

class Program
{
    static void Main(string[] args)
    {
        double homePrice, interestRate, downPaymentPercentage, downPayment, financedAmount, totalInterest, monthlyPayment;

        Console.Write("Enter the price of the home: ");
        homePrice = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the current interest rate (in percentage): ");
        interestRate = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the percentage of the total price made as down payment: ");
        downPaymentPercentage = Convert.ToDouble(Console.ReadLine());

        downPayment = homePrice * (downPaymentPercentage / 100);
        financedAmount = homePrice - downPayment;

        // Calculate monthly payment
        double monthlyInterestRate = interestRate / 1200; // Divide by 12 months and 100 to convert to percentage
        int numberOfPayments = 30 * 12; // 30 years * 12 months
        monthlyPayment = (financedAmount * monthlyInterestRate) / (1 - Math.Pow(1 + monthlyInterestRate, -numberOfPayments));

        // Calculate total interest
        totalInterest = monthlyPayment * numberOfPayments - financedAmount;

        Console.WriteLine($"Down Payment: ${downPayment:F2}");
        Console.WriteLine($"Amount Financed: ${financedAmount:F2}");
        Console.WriteLine($"Monthly Payment: ${monthlyPayment:F2}");
        Console.WriteLine($"Total Interest Paid Over 30 Years: ${totalInterest:F2}");
    }
}
